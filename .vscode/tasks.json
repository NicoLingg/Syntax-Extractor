{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "copy-assets",
			"type": "shell",
			"command": "npm run copy-assets",
			"problemMatcher": []
		},
		{
			"label": "build-and-copy-assets",
			"type": "shell",
			"dependsOn": ["copy-assets", "watch"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}